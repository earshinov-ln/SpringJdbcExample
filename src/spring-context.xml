<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <bean id="employeeDao" class="name.earshinov.SpringJdbcExample.EmployeeDao">
        <property name="dataSource" ref="dataSource"/>
        <property name="transactionManager" ref="transactionManager"/>
        
        <!-- SQL-запросы  -->
        <property name="insertSql">
        	<value><![CDATA[
        		INSERT INTO Employee (empno, ename, job_title)
				VALUES (?, ?, ?)
        	]]></value>
        </property>
        <property name="updateSql">
        	<value><![CDATA[
        		UPDATE Employee 
				SET ename = ?, job_title = ?
				WHERE empno = ?
        	]]></value>
        </property>
        <property name="findByEmpnoSql">
        	<value><![CDATA[
        		SELECT *
				FROM Employee
				WHERE empno = ?
        	]]></value>
        </property>
        <property name="deleteByEmpnoSql">
        	<value><![CDATA[
        		DELETE FROM Employee
				WHERE empno = ?
        	]]></value>
        </property>
    </bean>
    
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
    </bean>
    
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
	     <property name="dataSource" ref="dataSource"/>
	</bean>

    <context:property-placeholder location="jdbc.properties"/>

</beans>